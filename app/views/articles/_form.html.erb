<% if @article.errors.any?  %>
<h2>ERRORS</h2>

	<ul>
		<% if @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		<% end %>	
	</ul>
<% end %>



<%= form_for @article do |f| %>
<p>
	<%= f.label :title  %><br>
	<%= f.text_field :title %>
</p>	
<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>
<hr>
<%= f.submit %>

<% end %>

<%= link_to "Back to all articles" , articles_path %>